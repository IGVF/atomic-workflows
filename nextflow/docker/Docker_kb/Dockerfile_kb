FROM continuumio/miniconda3

RUN conda create -n kb_env -y python=3.8 && \
    conda run -n kb_env pip install kb-python && \
    echo "source activate kb_env" > ~/.bashrc
    
    
# if needed gget: pip install gget
    

# Set default command to start /bin/bash
ENV PATH /usr/local/bin:/opt/conda/envs/kb_env/bin:$PATH
ENV CONDA_DEFAULT_ENV kb_env


