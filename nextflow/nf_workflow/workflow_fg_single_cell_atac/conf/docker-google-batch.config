  }
  
  withLabel: 'joint_metrics_html_report' {
    container = 'eilalan/rank_plot_env:latest'
    executor = 'google-batch'
    cache = false
    machineType = 'n1-standard-1'
    time = '4 min'
    errorStrategy = 'terminate'
  }
  
  docker {
    enabled = true
    privileged = true
    envWhitelist=['ENV_SYNAPSE_TOKEN']
  }
}

